<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  
  <typeAliases>
    <typeAlias type="step28.ex5.Member" alias="member"/>
    <typeAlias type="step28.ex5.Teacher" alias="teacher"/>
    <typeAlias type="step28.ex5.Project" alias="project"/>
  </typeAliases>

  <environments default="development">
    <environment id="development">  
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/webappdb"/>
        <property name="username" value="webapp"/>
        <property name="password" value="1111"/>
      </dataSource>
    </environment>
  </environments>
  <mappers> <!-- SQL문이 들어있는 XML파일의 경로 -->
    <mapper resource="step28/ex5/MemberDao.xml"/>
    <mapper resource="step28/ex5/TeacherDao.xml"/>
    <mapper resource="step28/ex5/ProjectDao.xml"/>
  </mappers>
</configuration>